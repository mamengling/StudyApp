<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/unit_voice_record_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/unit_voice_record_operate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/voice_record"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/unit_voice_record_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在录音"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/unit_voice_record_time"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="00:00:00"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="11sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/unit_voice_record_finish"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:gravity="center"
            android:text="完成"
            android:textColor="#000000"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>