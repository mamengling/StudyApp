<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fscreen_bg"
    tools:context=".ui.StartActivity">

    <include
        android:id="@+id/title"
        layout="@layout/activity_bg_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/cornerbg_white_top"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="设备号"
            android:textSize="@dimen/textsize_8" />

        <TextView
            android:id="@+id/tv_device_number"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="@dimen/textsize_8" />

        <TextView
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="注册码"
            android:textSize="@dimen/textsize_8" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_device_code"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="#c7eac9"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:textSize="@dimen/textsize_8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="15dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="@dimen/textsize_7"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:text="搜索"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:text="退出"
        android:textSize="25sp"
        android:visibility="visible" />
</RelativeLayout>