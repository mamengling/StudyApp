<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fscreen_bg"
    tools:context=".ui.ZGWHActivity">

    <include
        android:id="@+id/title"
        layout="@layout/activity_bg_title" />

    <LinearLayout
        android:id="@+id/line_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="100dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="文化制度全景"
            android:textColor="@color/gplus_color_6"
            android:textSize="@dimen/textsize_20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/largeLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/search"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line_title"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/image"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gdzdygz"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/wymp_circle_icon_bg"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="古代礼制\n与官制"
            android:textColor="@color/gplus_color_6"
            android:textSize="@dimen/textsize_10" />

        <TextView
            android:id="@+id/tv_gdjyykj"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/wymp_circle_icon_bg"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="古代教育\n与科举"
            android:textColor="@color/gplus_color_6"
            android:textSize="@dimen/textsize_10" />

        <TextView
            android:id="@+id/tv_gdxmhcw"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/wymp_circle_icon_bg"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="古代姓名\n和称谓"
            android:textColor="@color/gplus_color_6"
            android:textSize="@dimen/textsize_10" />

        <TextView
            android:id="@+id/tv_gdtwhlf"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/wymp_circle_icon_bg"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="古代天文\n和历法"
            android:textColor="@color/gplus_color_6"
            android:textSize="@dimen/textsize_10" />
    </LinearLayout>


    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:text="搜索"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:text="返回"
        android:textSize="25sp" />
</RelativeLayout>