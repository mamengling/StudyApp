<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fscreen_bg"
    tools:context=".ui.ZGWHActivity">

    <include
        android:id="@+id/title"
        layout="@layout/activity_bg_title" />

    <LinearLayout
        android:id="@+id/line_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="100dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="中国文化全景"
            android:textColor="@color/gplus_color_6"
            android:textSize="@dimen/textsize_20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/largeLabel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/search"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/line_title"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="84dp"
        android:layout_toRightOf="@+id/image"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dyz"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/v_image_bg_mulu_logo"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingBottom="35dp"
            android:paddingTop="35dp"
            android:text="第\n一\n章\n：\n先\n秦\n文\n学"
            android:textColor="@color/gplus_color_7"
            android:textSize="@dimen/textsize_10" />

        <TextView
            android:id="@+id/tv_dez"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/v_image_bg_mulu_logo"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingBottom="35dp"
            android:paddingTop="35dp"
            android:text="第\n二\n章\n：\n秦\n汉\n文\n学"
            android:textColor="@color/gplus_color_7"
            android:textSize="@dimen/textsize_10" />

        <TextView
            android:id="@+id/tv_dsz"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/v_image_bg_mulu_logo"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingBottom="35dp"
            android:paddingTop="35dp"
            android:text="第\n三\n章\n：\n魏\n晋\n南\n北\n朝\n文\n学"
            android:textColor="@color/gplus_color_7"
            android:textSize="@dimen/textsize_10" />

        <TextView
            android:id="@+id/tv_dszt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/v_image_bg_mulu_logo"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingBottom="35dp"
            android:paddingTop="35dp"
            android:text="第\n四\n章\n：\n唐\n五\n代\n文\n学"
            android:textColor="@color/gplus_color_7"
            android:textSize="@dimen/textsize_10" />


        <TextView
            android:id="@+id/tv_dwz"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/v_image_bg_mulu_logo"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingBottom="35dp"
            android:paddingTop="35dp"
            android:text="第\n五\n章\n：\n宋\n代\n文\n学"
            android:textColor="@color/gplus_color_7"
            android:textSize="@dimen/textsize_10" />

        <TextView
            android:id="@+id/tv_dlz"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/v_image_bg_mulu_logo"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingBottom="35dp"
            android:paddingTop="35dp"
            android:text="第\n六\n章\n：\n元\n代\n文\n学"
            android:textColor="@color/gplus_color_7"
            android:textSize="@dimen/textsize_10" />

        <TextView
            android:id="@+id/tv_dqz"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/v_image_bg_mulu_logo"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingBottom="35dp"
            android:paddingTop="35dp"
            android:text="第\n七\n章\n：\n明\n代\n文\n学"
            android:textColor="@color/gplus_color_7"
            android:textSize="@dimen/textsize_10" />

        <TextView
            android:id="@+id/tv_dbz"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/v_image_bg_mulu_logo"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:paddingBottom="35dp"
            android:paddingTop="35dp"
            android:text="第\n八\n章\n：\n清\n代\n文\n学"
            android:textColor="@color/gplus_color_7"
            android:textSize="@dimen/textsize_10" />

    </LinearLayout>


    <TextView
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:text="搜索"
        android:textSize="25sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:text="返回"
        android:textSize="25sp" />
</RelativeLayout>